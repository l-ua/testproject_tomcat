            <scope>system</scope>
            <systemPath>D:\MuleLib\mule\mule-module-scripting-3.8.0-M1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-xml</artifactId>
            <version>${mule.version}</version>
            <scope>system</scope>
