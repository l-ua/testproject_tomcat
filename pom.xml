            <systemPath>D:\MuleLib\mule\mule-transport-jms-ee-3.8.0-M1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.mule.transports</groupId>
            <artifactId>mule-transport-vm</artifactId>
